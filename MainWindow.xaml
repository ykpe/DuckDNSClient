<Window x:Class="DuckDNSClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudFlareDNSClient"
        mc:Ignorable="d"
        Title="DuckDNS Record Auto Updater" Height="350" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="94*"/>
            <ColumnDefinition Width="480*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Domain" HorizontalAlignment="Left" Margin="35,33,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.446,0.112" Grid.Column="2"/>
        <TextBox x:Name="TextBox_ZoneID" HorizontalAlignment="Left" Margin="11,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="352" Grid.Column="3"/>
        <Label Content="Token" HorizontalAlignment="Left" Margin="35,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.446,0.112" Grid.Column="2"/>
        <TextBox x:Name="TextBox_APIKey" HorizontalAlignment="Left" Margin="11,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="352" Grid.Column="3"/>
        <Label Content="Interval" HorizontalAlignment="Left" Margin="35,119,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.446,0.112" Grid.Column="2"/>
        <TextBox x:Name="TextBox_Interval" HorizontalAlignment="Left" Margin="11,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="352" Grid.Column="3"/>
        <Label x:Name="Label_IPv4Status" Content="IPv4" HorizontalAlignment="Left" Margin="44,202,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.446,0.112" Grid.Column="2" Grid.ColumnSpan="2" Width="520"/>
        <Label x:Name="Label_IPv6Status" Content="IPv6" HorizontalAlignment="Left" Margin="44,232,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.446,0.112" Grid.Column="2" Grid.ColumnSpan="2" Width="520"/>
        <Button x:Name="Button_UpdateStart" Content="Start" HorizontalAlignment="Left" Margin="63,173,0,0" VerticalAlignment="Top" Click="Button_UpdateStart_Click" Grid.Column="3"/>
        <Button x:Name="Button_UpdateStop" Content="Stop" HorizontalAlignment="Left" Margin="240,173,0,0" VerticalAlignment="Top" Click="Button_UpdateStop_Click" Grid.Column="3"/>

    </Grid>
</Window>
